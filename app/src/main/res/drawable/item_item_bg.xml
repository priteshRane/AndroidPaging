<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <solid android:color="#04E0E0E0" />
            <corners android:radius="@dimen/shadow_radius" />
